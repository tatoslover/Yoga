  }

  .guide-content-box.active {
    display: block;
    animation: fadeIn 0.5s ease forwards;
  }

  .guide-content-box h2 {
    text-align: center;
    margin-bottom: 2rem;
    color: var(--color-secondary);
    position: relative;
    padding-bottom: 0.75rem;
  }

  .guide-content-box h2::after {
    content: "";
    position: absolute;
    bottom: 0;
