  }

  .content-section {
    margin-bottom: 1.5rem;
  }

  .content-section h3 {
    color: var(--color-secondary);
    margin-bottom: 0.5rem;
    font-size: 1.2rem;
  }

  .content-section p {
    line-height: 1.6;
  }

  .btn.secondary-btn {
    margin-top: 1rem;
    display: inline-block;
  }

  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
  }

  /* Responsive styles */
  @media (max-width: 768px) {
    .guide-section-wrapper {
      padding: 1.5rem;
    }

    .guide-selector-buttons {
      flex-direction: column;
      align-items: center;
    }

    .guide-selector-btn {
      width: 100%;
      max-width: 300px;
      text-align: center;
    }

    .guide-content-box {
      padding: 1.5rem;
    }

    .yoga-type-content {
      grid-template-columns: 1fr;
    }
  }
</style>
