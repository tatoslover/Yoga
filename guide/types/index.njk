    padding: 2.5rem;
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.5);
    border: 1px solid rgba(255, 255, 255, 0.1);
    max-width: 1200px;
    margin: 0 auto;
  }

  .guide-section-intro {
    text-align: center;
    margin-bottom: 2.5rem;
  }

  .guide-section-intro h2 {
    font-size: 2rem;
    margin-bottom: 1rem;
    color: var(--color-text);
  }

  .guide-section-intro p {
    color: var(--color-text-light);
    font-size: 1.1rem;
    max-width: 800px;
    margin: 0 auto;
    line-height: 1.6;
  }

  .guide-selector {
    margin-bottom: 2rem;
  }

  .guide-selector-buttons {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .guide-selector-btn {
    background-color: rgba(40, 40, 50, 0.95);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 8px;
    padding: 0.75rem 1.5rem;
    color: var(--color-text);
    font-size: 1rem;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .guide-selector-btn:hover {
    background-color: rgba(50, 50, 60, 0.98);
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
    border-color: rgba(255, 255, 255, 0.15);
  }

  .guide-selector-btn.active {
    background-color: rgba(60, 60, 70, 0.98);
    border-color: var(--color-secondary);
    color: #fff;
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
  }

  .guide-content-container {
    position: relative;
  }

  .guide-content-box {
    background-color: rgba(25, 25, 35, 0.98);
    border-radius: 8px;
    padding: 2.5rem;
