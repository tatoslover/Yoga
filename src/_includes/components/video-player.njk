<div class="video-player">
    <div class="video-wrapper">
        <div id="player-{{ video.id }}" class="youtube-player" data-video-id="{{ video.id }}"></div>
        <div class="custom-controls">
            <button class="rewind-15" aria-label="Rewind 15 seconds" data-player-id="{{ video.id }}">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="24" height="24"><path d="M12.5 8c-2.65 0-5.05 1-6.9 2.6L2 7v9h9l-3.62-3.62c1.39-1.16 3.16-1.88 5.12-1.88 3.54 0 6.55 2.31 7.6 5.5l2.37-.78C21.08 11.03 17.15 8 12.5 8z"/></svg>
                <span class="control-label">-15s</span>
            </button>
            <button class="play-pause" aria-label="Play or pause" data-player-id="{{ video.id }}">
                <svg class="play-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="24" height="24"><path d="M8 5v14l11-7z"/></svg>
                <svg class="pause-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="24" height="24" style="display: none;"><path d="M6 19h4V5H6v14zm8-14v14h4V5h-4z"/></svg>
            </button>
            <button class="forward-15" aria-label="Forward 15 seconds" data-player-id="{{ video.id }}">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="24" height="24"><path d="M18.4 10.6C16.55 9 14.15 8 11.5 8c-4.65 0-8.58 3.03-9.96 7.22L3.9 16a8.002 8.002 0 0 1 7.6-5.5c1.95 0 3.73.72 5.12 1.88L13 16h9V7l-3.6 3.6z"/></svg>
                <span class="control-label">+15s</span>
            </button>
            <button class="fullscreen" aria-label="Toggle fullscreen" data-player-id="{{ video.id }}">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="24" height="24"><path d="M7 14H5v5h5v-2H7v-3zm-2-4h2V7h3V5H5v5zm12 7h-3v2h5v-5h-2v3zM14 5v2h3v3h2V5h-5z"/></svg>
                <span class="control-label">Full</span>
            </button>
        </div>
    </div>

    <div class="video-info-minimal">
        <h3 class="video-title">{{ video.title }}</h3>
        <div class="video-meta">
            <span class="video-type badge">{{ video.type }}</span>
            <span class="video-duration badge">{{ video.duration }}</span>
            <span class="video-difficulty badge">{{ video.difficulty }}</span>
        </div>
        {% if showDescription %}
        <div class="video-description-preview">
            <p>{{ video.description | truncate(150) }}</p>
            {% if video.description.length > 150 %}
            <a href="/videos/{{ video.slug }}/" class="read-more">Read more</a>
            {% endif %}
        </div>
        {% endif %}
        {% if showLink %}
        <a href="/videos/{{ video.slug }}/" class="video-link">View details</a>
        {% endif %}
    </div>
</div>
