<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Get all selector buttons and content boxes
    const selectorButtons = document.querySelectorAll('.guide-selector-btn');
    const contentBoxes = document.querySelectorAll('.guide-content-box');

    // Set first content box as active by default
    if (contentBoxes.length > 0) {
      contentBoxes[0].classList.add('active');
      selectorButtons[0].classList.add('active');
    }

    // Add click event to each button
    selectorButtons.forEach(button => {
      button.addEventListener('click', function() {
        const targetId = this.getAttribute('data-target');
        const targetContent = document.getElementById(`${targetId}-content`);

        // Remove active class from all buttons and content boxes
        selectorButtons.forEach(btn => btn.classList.remove('active'));
        contentBoxes.forEach(box => box.classList.remove('active'));

        // Add active class to clicked button and its content
        this.classList.add('active');
        targetContent.classList.add('active');
      });
    });
  });
</script>

