  /* Poses Content */
  .poses-description {
    text-align: center;
    margin-bottom: 2rem;
  }

  .poses-description p {
    max-width: 800px;
    margin: 0 auto 2rem;
    line-height: 1.6;
  }

  .poses-list {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 1.5rem;
  }

  .pose-item {
    background-color: rgba(var(--theme-primary-rgb, 30, 30, 40), 0.95);
    border-radius: 8px;
    padding: 1.5rem;
    border: 1px solid rgba(var(--theme-border-rgb, 255, 255, 255), 0.1);
    transition: var(--theme-transition, all 0.3s ease);
  }

  .pose-item:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.3);
    border-color: var(--color-secondary, #66bb6a);
  }

  .pose-item h4 {
    color: var(--color-secondary, #66bb6a);
    margin-bottom: 0.75rem;
    font-size: 1.3rem;
    transition: var(--theme-transition, all 0.3s ease);
  }

  .pose-item p {
    line-height: 1.6;
  }

  .section-footer {
    text-align: center;
    margin-top: 2rem;
  }

  .coming-soon {
    font-style: italic;
    color: var(--color-text-light);
  }

  /* Tips Content */
  .tips-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 1.5rem;
  }

  .tip-card {
    background-color: rgba(var(--theme-primary-rgb, 30, 30, 40), 0.95);
    border-radius: 8px;
    padding: 1.5rem;
    border: 1px solid rgba(var(--theme-border-rgb, 255, 255, 255), 0.1);
    transition: var(--theme-transition, all 0.3s ease);
  }

  .tip-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.3);
    border-color: var(--color-secondary, #66bb6a);
  }

  .tip-card h4 {
    color: var(--color-secondary, #66bb6a);
    margin-bottom: 0.75rem;
    font-size: 1.3rem;
    transition: var(--theme-transition, all 0.3s ease);
  }

  .tip-card p {
    line-height: 1.6;
    margin-bottom: 0.75rem;
  }

  .tip-card p:last-child {
    margin-bottom: 0;
  }

  /* Benefits Content */
  .benefits-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 1.5rem;
  }

  .benefit-card {
    background-color: rgba(var(--theme-primary-rgb, 30, 30, 40), 0.95);
    border-radius: 8px;
    padding: 1.5rem;
    border: 1px solid rgba(var(--theme-border-rgb, 255, 255, 255), 0.1);
    transition: var(--theme-transition, all 0.3s ease);
  }

  .benefit-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.3);
    border-color: var(--color-secondary, #66bb6a);
  }

  .benefit-card h4 {
    color: var(--color-secondary, #66bb6a);
    margin-bottom: 0.75rem;
    font-size: 1.3rem;
    transition: var(--theme-transition, all 0.3s ease);
  }

  .benefit-card p {
    line-height: 1.6;
  }

