  }

  @keyframes pulse {
    0% { box-shadow: 0 0 0 0 rgba(var(--color-secondary-rgb, 255, 165, 0), 0.4); }
    70% { box-shadow: 0 0 0 10px rgba(var(--color-secondary-rgb, 255, 165, 0), 0); }
    100% { box-shadow: 0 0 0 0 rgba(var(--color-secondary-rgb, 255, 165, 0), 0); }
  }

  /* Responsive styles */
  @media (max-width: 768px) {
    .guide-section {
      padding: 1.5rem;
