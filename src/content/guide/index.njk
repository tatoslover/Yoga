<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Get all selector buttons
    const selectorButtons = document.querySelectorAll('.guide-selector-btn');

    // Initialize all content boxes as hidden (not active)
    const sections = ['types', 'levels', 'poses', 'tips', 'benefits'];

    sections.forEach(section => {
      const container = document.getElementById(`${section}-container`);
      if (container) {
        const contentBoxes = container.querySelectorAll('.guide-content-box');
        // Ensure all content boxes start as hidden (not active)
        contentBoxes.forEach(box => {
          box.classList.remove('active');
        });
      }
    });

    // Add click event to each button
    selectorButtons.forEach(button => {
      button.addEventListener('click', function() {
        const section = this.getAttribute('data-section');
        const targetId = this.getAttribute('data-target');
        const container = document.getElementById(`${section}-container`);
        const targetContent = document.getElementById(`${section}-${targetId}-content`);

        // If this button is already active, deactivate it and hide content
        if (this.classList.contains('active')) {
          this.classList.remove('active');
          targetContent.classList.remove('active');
          return;
        }

        // Get all buttons and content boxes for this section
        const sectionButtons = document.querySelectorAll(`[data-section="${section}"]`);
        const contentBoxes = container.querySelectorAll('.guide-content-box');

        // Remove active class from all buttons and content boxes in this section
        sectionButtons.forEach(btn => btn.classList.remove('active'));
        contentBoxes.forEach(box => box.classList.remove('active'));

        // Add active class to clicked button and its content
        this.classList.add('active');
        targetContent.classList.add('active');

        // Scroll to content box smoothly
        setTimeout(() => {
          targetContent.scrollIntoView({ behavior: 'smooth', block: 'center' });
        }, 100);
      });
    });
  });
</script>

